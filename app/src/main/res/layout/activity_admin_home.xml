<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminHome"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="20">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="7"
            android:src="@drawable/frontimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.75"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/recttrans"
                        android:stateListAnimator="@animator/button_state_list_anim"
                        android:gravity="center"
                        android:text="Alloted\nRooms"
                        android:fontFamily="monospace"
                        android:textColor="#FFFFFF"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="22sp"
                        android:autoSizeMinTextSize="10sp"
                        android:paddingHorizontal="10dp"
                        android:textStyle="italic"/>
                    <TextView
                        android:id="@+id/allotedRoom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#FFFFFF"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="10sp"
                        android:paddingHorizontal="10dp"
                        android:textStyle="italic"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.75"
                    android:weightSum="10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:autoSizeMaxTextSize="22sp"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/recttrans"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:stateListAnimator="@animator/button_state_list_anim"
                        android:text="Unalloted\nRooms"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/unAllotedRoom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#FFFFFF"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="10sp"
                        android:paddingHorizontal="10dp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>